int binarySearch(int arr[], int l, int r, int target)
{
    //â€œIterative BS: l <= r in the loop; recursive BS: base case l > r.â€
    if(l > r) 
         return -1;
         
    int mid = l + (r - l)/2;
    
    if(arr[mid] == target)
         return mid;
    if(arr[mid] < target) 
        return binarySearch(arr, mid+1, r, target);
    else 
        return binarySearch(arr, l, mid-1, target);
}
